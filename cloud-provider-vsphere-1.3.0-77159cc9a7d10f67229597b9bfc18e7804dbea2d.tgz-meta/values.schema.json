{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "cloud-provider-for-vsphere": {
            "type": "object",
            "properties": {
                "config": {
                    "type": "object",
                    "properties": {
                        "datacenter": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "password": {
                            "type": "string"
                        },
                        "region": {
                            "type": "string"
                        },
                        "username": {
                            "type": "string"
                        },
                        "vcenter": {
                            "type": "string"
                        },
                        "zone": {
                            "type": "string"
                        }
                    }
                },
                "daemonset": {
                    "type": "object",
                    "properties": {
                        "annotations": {
                            "type": "object"
                        },
                        "cmdline": {
                            "type": "object",
                            "properties": {
                                "additionalParams": {
                                    "type": "object"
                                },
                                "cloudConfig": {
                                    "type": "object",
                                    "properties": {
                                        "dir": {
                                            "type": "string"
                                        },
                                        "file": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "logging": {
                                    "type": "integer"
                                }
                            }
                        },
                        "dnsPolicy": {
                            "type": "string"
                        },
                        "image": {
                            "type": "string"
                        },
                        "nodeSelector": {
                            "type": "object"
                        },
                        "podAnnotations": {
                            "type": "object"
                        },
                        "podLabels": {
                            "type": "object"
                        },
                        "pullPolicy": {
                            "type": "string"
                        },
                        "replicaCount": {
                            "type": "integer"
                        },
                        "resources": {
                            "type": "object"
                        },
                        "tag": {
                            "type": "string"
                        },
                        "tolerations": {
                            "type": "array"
                        }
                    }
                },
                "global": {
                    "type": "object",
                    "properties": {
                        "config": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                },
                "ingress": {
                    "type": "object",
                    "properties": {
                        "annotations": {
                            "type": "object"
                        },
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "podSecurityPolicy": {
                    "type": "object",
                    "properties": {
                        "annotations": {
                            "type": "object"
                        },
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "rbac": {
                    "type": "object",
                    "properties": {
                        "create": {
                            "type": "boolean"
                        }
                    }
                },
                "securityContext": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "fsGroup": {
                            "type": "integer"
                        },
                        "runAsUser": {
                            "type": "integer"
                        }
                    }
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "annotations": {
                            "type": "object"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "endpointPort": {
                            "type": "integer"
                        },
                        "loadBalancerSourceRanges": {
                            "type": "array"
                        },
                        "targetPort": {
                            "type": "integer"
                        },
                        "type": {
                            "type": "string"
                        }
                    }
                },
                "serviceAccount": {
                    "type": "object",
                    "properties": {
                        "create": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "required": [
        "cloud-provider-for-vsphere"
    ]
}
